context ArticleArea {

	constraint test{
		check: self.ID <>0
		message: "test"
	} 
		
	constraint areaOrArticle{
		check : self.subArea.select(article|article.type = Article ).size() <> 0 implies self.subArea.select(subArea|subArea.type = ArticleArea ).size() = 0
		message: "Must be either an article or areas" 	
	}
}